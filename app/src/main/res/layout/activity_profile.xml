<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.millennial.ahooi.activity.ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" />

    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/circle_2" />

        <RelativeLayout
            android:id="@+id/layout_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shareLabel"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Share Poen Kau"
                android:textSize="28dp"
                android:textColor="#f8ac49"/>

            <RelativeLayout
                android:id="@+id/progress"
                android:layout_below="@id/shareLabel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <View
                            android:id="@+id/bar1"
                            android:layout_weight="20"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="10dp"
                            android:background="#fff"/>

                        <View
                            android:id="@+id/bar2"
                            android:layout_weight="20"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:background="#fff"/>

                        <View
                            android:id="@+id/bar3"
                            android:layout_weight="20"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:background="#fff"/>

                        <View
                            android:id="@+id/bar4"
                            android:layout_weight="20"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:background="#fff"/>

                        <View
                            android:id="@+id/bar5"
                            android:layout_weight="20"
                            android:layout_width="40dp"
                            android:layout_height="15dp"
                            android:background="#fff"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/circle1"
                        android:layout_centerVertical="true"
                        android:background="@drawable/lingkaran"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <View
                        android:id="@+id/circle2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/circle1"
                        android:background="@drawable/lingkaran"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <View
                        android:id="@+id/circle3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/circle2"
                        android:background="@drawable/lingkaran"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <View
                        android:id="@+id/circle4"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/circle3"
                        android:background="@drawable/lingkaran"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <View
                        android:id="@+id/circle5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/circle4"
                        android:background="@drawable/lingkaran"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/circle5">

                        <ImageView
                            android:id="@+id/mug"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/mug"/>

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            app:lottie_fileName="confetti.json"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/klaim"
                android:layout_below="@id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp">

                <Button
                    android:id="@+id/buttonKlaim"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Klaim Hadiah"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:background="@drawable/ambel_button_2"/>

                <Button
                    android:id="@+id/buttonKlaim2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Klaim Hadiah"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:clickable="false"
                    android:background="@drawable/ambel_button"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/info"
                android:layout_below="@id/klaim"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="User Name"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/star" />

                    <TextView
                        android:id="@+id/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/star"
                        android:text="0 Poen"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/back_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/keluar_button_2"
                        android:clickable="false"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/keluar_button"
                        android:clickable="false"
                        android:text="Keluar"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18dp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/disclaimer"
                android:layout_below="@id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="140dp"
                    android:background="@drawable/rounded"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/rounded_white">

                        <TextView
                            android:id="@+id/pengumuman"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:text="@string/notice"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="70dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/header_berita_outer">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/header_berita_inner">

                        <TextView
                            android:id="@+id/disc_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Pengumuman"
                            android:textColor="@android:color/white"
                            android:textSize="25dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/prize"
                android:layout_below="@id/disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/rounded"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/rounded_white">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="70dp"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/header_berita_outer">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/header_berita_inner">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Hadiah mu"
                            android:textColor="@android:color/white"
                            android:textSize="25dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/history"
                android:layout_below="@id/prize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rounded"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/rounded_white">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/history_list"
                            android:layout_marginTop="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="70dp"
                    android:layout_marginStart="70dp"
                    android:background="@drawable/header_berita_outer">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/header_berita_inner">

                        <TextView
                            android:id="@+id/label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="History"
                            android:textColor="@android:color/white"
                            android:textSize="25dp" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
